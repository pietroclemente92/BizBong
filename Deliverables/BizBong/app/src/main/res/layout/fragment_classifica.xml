<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/modalita_gioco_text"
        android:text="Modalità di gioco"
        android:textStyle="bold"
        android:textSize="12pt"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/modalita_text"
        android:text="Seleziona una delle modalità proposte e scopri i classificati"
        android:textStyle="bold"
        android:textSize="6pt"
        android:textColor="@color/blackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/modalita_gioco_text"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/classifica_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/custom_spinner"
        android:gravity="center"
        android:layout_margin="20dp"
        android:popupBackground="#DFFFFFFF"
        android:layout_below="@+id/modalita_text"/>

    <ListView
        android:id="@+id/classifica_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/classifica_spinner"
        android:layout_marginTop="20dp"/>
</RelativeLayout>