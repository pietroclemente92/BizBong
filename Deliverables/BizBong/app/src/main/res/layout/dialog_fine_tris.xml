<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundForm">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bar_bizbong"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="30dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="@+id/titolo"
            android:background="@drawable/icon_tris"
            android:layout_gravity="center"/>

        <TextView
            android:text="PROVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titolo"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/dialogButtonNO"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rhome"
                android:background="@drawable/buttonshape"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/dialogButtonOK"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continua"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>