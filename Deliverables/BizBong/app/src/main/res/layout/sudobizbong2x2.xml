<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamesoftitalia.bizbong.GameSudoBizBongActivity"
    android:background="@drawable/back_all_activity">
    <!--android:background="#5e5e5e"-->


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bar_bizbong">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="90px"
            android:layout_height="90px"
            android:background="@drawable/ic_back"/>
        <TextView
            android:text="SudoBizBong"
            android:textSize="14pt"
            android:textStyle="bold"
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/campo"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/b0"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="14dip" />
            <ImageButton

                android:id="@+id/b1"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="14dip" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="14dip" />



            <ImageButton

                android:id="@+id/b4"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="14dip" />
            <ImageButton

                android:id="@+id/b5"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b6"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="14dip" />


            <ImageButton

                android:id="@+id/b7"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="1"
                android:layout_column="3"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b8"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="14dip" />
            <ImageButton

                android:id="@+id/b9"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="14dip" />

            <ImageButton
                android:id="@+id/b10"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="2"
                android:layout_column="2"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b11"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="2"
                android:layout_column="3"
                android:textSize="14dip" />


            <ImageButton

                android:id="@+id/b12"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="14dip" />
            <ImageButton

                android:id="@+id/b13"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="3"
                android:layout_column="1"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b14"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="3"
                android:layout_column="2"
                android:textSize="14dip" />

            <ImageButton

                android:id="@+id/b15"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_row="3"
                android:layout_column="3"
                android:textSize="14dip" />


        </GridLayout>


        <Button
            android:text="@string/controlla"
            android:background="@drawable/buttonshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/finebutton"
            android:visibility="gone"/>



    </LinearLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mosseutente"
        android:visibility="gone"
        >


        <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         android:layout_weight="2.17" />

        <ImageButton
            android:id="@+id/u0"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="14dip"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
        android:id="@+id/u2"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="14dip"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/u1"
        android:layout_toEndOf="@+id/u1" />

    <ImageButton
        android:id="@+id/u3"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="14dip"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/u2"
        android:layout_toEndOf="@+id/u2" />

        <ImageButton
            android:id="@+id/u1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/u0"
            android:layout_toEndOf="@+id/u0"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" />

    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/timer3"
        android:id="@+id/timer"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/time"
        android:layout_toEndOf="@+id/time" />


    <TextView
        android:textColor="@color/white"
        android:textSize="6pt"
        android:textStyle="bold"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:id="@+id/n_mosse"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="@color/white"
        android:textSize="6pt"
        android:textStyle="bold"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:visibility="gone"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/orologio"
        android:layout_toEndOf="@+id/orologio"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:id="@+id/orologio"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="14dip"
        android:visibility="gone"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/white"
        android:textSize="6pt"
        android:textStyle="bold"
        android:text="@string/mossed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mosse"
        android:visibility="gone"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp" />


</RelativeLayout>